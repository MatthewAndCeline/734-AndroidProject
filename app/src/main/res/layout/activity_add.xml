<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.info.matthewceline.classeurcom.AddActivity">

    <TextView
        android:id="@+id/TextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addActivityTitle"
        android:textSize="10pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp">
    </TextView>

    <EditText
        android:id="@+id/EditTextCardName"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name_hint"
        android:inputType="textPersonName"
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/TextViewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </EditText>

    <EditText
        android:id="@+id/EditTextCardPicture"
        android:layout_height="wrap_content"
        android:hint="@string/enter_pic_hint"
        android:inputType="textEmailAddress"
        android:layout_width="fill_parent"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/EditTextCardName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </EditText>

    <CheckBox
        android:id="@+id/CheckBoxCategory"
        android:layout_height="wrap_content"
        android:text="The type of card is a catagory card"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </CheckBox>

    <CheckBox
        android:id="@+id/CheckBoxFinal"
        android:layout_height="wrap_content"
        android:text="The type of card is a final card"
        android:layout_width="fill_parent"
        android:layout_below="@+id/CheckBoxCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </CheckBox>

    <Button
        android:id="@+id/ButtonCreateCard"
        android:layout_height="wrap_content"
        android:text="Create Button"
        android:onClick="sendNewCard"
        android:layout_width="fill_parent"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/CheckBoxFinal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </Button>


</RelativeLayout>
